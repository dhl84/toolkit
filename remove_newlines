def remove_newlines(input_filename, output_filename=None):
    with open(input_filename, 'r') as file:
        text = file.read()
    
    # Replace newlines followed by a non-newline character with a space
    text = text.replace('\n', ' ').replace('  ', ' ')
    
    if output_filename is None:
        output_filename = input_filename
    
    with open(output_filename, 'w') as file:
        file.write(text)

    print(f"Processed text saved to {output_filename}")

# Example usage
# remove_newlines('input.txt', 'output.txt')
